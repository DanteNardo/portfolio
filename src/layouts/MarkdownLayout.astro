---
import "@fontsource-variable/inter";
import "@fontsource/space-mono/400.css";
import "@fontsource/space-mono/700.css";
import "@/styles/main.css";

import Header from "@/components/layout/Header";
import Main from "@/components/layout/Main";
import MainGradient from "@/components/article/MainGradient";
import Article from "@/components/article/Article";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dante Nardo's portfolio website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="dark">
    <div
      class="w-full max-w-[100vw] max-h-[100svh] min-h-[100svh] print:!w-[816px] print:!h-[1056px] print:!m-0 items-center justify-start overflow-x-auto overflow-y-scroll font-sans text-default bg-base-950 print:bg-white acc-focus"
      style="color-scheme:dark;"
    >
      <Header client:load />
      <Main>
        <MainGradient />
        <Article>
          <slot />
        </Article>
      </Main>
    </div>
  </body>
</html>