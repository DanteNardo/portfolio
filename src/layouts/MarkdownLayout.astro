---
import "@fontsource-variable/inter";
import "@fontsource/space-mono/400.css";
import "@fontsource/space-mono/700.css";
import "../styles/main.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dante Nardo's portfolio website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="w-full h-[100svh] overflow-y-scroll overscroll-none font-sans text-default bg-zinc-950"
  >
    <header
      class="flex w-full gap-3 px-6 py-3 items-center border-b border-zinc-700"
    >
      <h3 class="text-2xl font-bold tracking-tight text-focus">Dante Nardo</h3>
    </header>
    <main
      class="w-full pt-12 px-12 pb-24 bg-gradient-to-b from-zinc-950 to-zinc-900"
    >
      <article class="mx-auto prose prose-invert">
        <slot />
      </article>
    </main>
  </body>
</html>

<style is:global></style>
