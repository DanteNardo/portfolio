---
import "@fontsource-variable/inter";
import "@fontsource/space-mono/400.css";
import "@fontsource/space-mono/700.css";
import "@/styles/main.css";

import ResumeButton from "@/components/resume/ResumeButton";
import { ViewTransitions } from "astro:transitions";
import { LuFileText } from "react-icons/lu";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dante Nardo's portfolio website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="w-full max-w-[100vw] max-h-[100svh] print:!w-[816px] print:!h-[1056px] print:!m-0 items-center justify-start overflow-x-auto overflow-y-scroll font-sans text-default bg-black print:bg-white acc-focus"
    style="color-scheme:dark;"
  >
    <header
      class="print:hidden relative z-50 flex w-full gap-3 px-6 py-3 items-center border-b border-base-700 bg-black/50 backdrop-blur"
    >
      <a href="/" class="acc-focus rounded">
        <h3 class="text-2xl font-bold tracking-tight text-focus">
          Dante Nardo
        </h3>
      </a>
      <div class="grow flex gap-3"></div>
      <ResumeButton />
    </header>
    <main
      class="relative flex flex-col px-12 pt-12 pb-24 print:p-0 items-center"
    >
      <slot />
    </main>
    <style is:global></style>
  </body>
</html>
